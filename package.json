{
    "name": "ts-pulumi-template",
    "version": "1.0.0",
    "description": "A Typescript & Pulumi Repo Template",
    "sideEffects": false,
    "scripts": {
        "build": "remix build",
        "dev": "remix dev",
        "start": "remix-serve build",
        "deploy:prod": "pnpm run build && pulumi up --cwd ./infrastructure --stack prod",
        "lambda-dev": "concurrently -p \"[{name}]\" -n \"TSC,NODEMON\" -c \"bgBlue.bold,bgMagenta.bold\" \"npx tsc ./lambda/app.ts --esModuleInterop --watch --pretty\" \"nodemon -q dist/index.js\""
    },
    "keywords": [],
    "author": "daveholst",
    "license": "ISC",
    "dependencies": {
        "@fastify/aws-lambda": "^3.0.0",
        "@pulumi/aws": "^5.0.0",
        "@pulumi/awsx": "^0.40.0",
        "@pulumi/pulumi": "^3.0.0",
        "@remix-run/architect": "^1.6.3",
        "@remix-run/express": "^1.6.3",
        "@remix-run/node": "^1.6.3",
        "@remix-run/react": "^1.6.3",
        "@remix-run/serve": "^1.6.3",
        "@stitches/react": "^1.2.7",
        "@types/aws-lambda": "^8.10.101",
        "@vendia/serverless-express": "^4.9.0",
        "@wanews/pulumi-apigateway-lambda-proxy": "^0.14.0",
        "aws-lambda": "^1.0.7",
        "esbuild": "^0.14.48",
        "esbuild-node-tsc": "^1.8.6",
        "express": "^4.18.1",
        "fastify": "^4.2.0",
        "lambda-build": "^1.0.6",
        "mime": "^3.0.0",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "ts-node": "^10.8.2",
        "zip-a-folder": "^1.1.5"
    },
    "devDependencies": {
        "@remix-run/dev": "^1.6.3",
        "@tsconfig/node16": "^1.0.3",
        "@types/express": "^4.17.13",
        "@types/node": "^18.0.0",
        "@types/react": "^17.0.39",
        "@types/react-dom": "^17.0.13",
        "@typescript-eslint/eslint-plugin": "^5.30.3",
        "@typescript-eslint/parser": "^5.30.3",
        "concurrently": "^7.2.2",
        "eslint": "^8.19.0",
        "eslint-config-prettier": "^8.5.0",
        "nodemon": "^2.0.18",
        "prettier": "^2.7.1",
        "typescript": "^4.7.4"
    }
}
